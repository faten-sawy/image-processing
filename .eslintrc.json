{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "plugins": ["@typescript-eslint", "prettier"],
    "rules": {
        "prettier/prettier": 2,
        "no-use-before-define": ["error", { "functions": true, "classes": true }],
        "no-var": "error",
        "prefer-const": "error"
    },
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2017
    },
    "env": {
      "node": true,
      "es6": true
    }
}